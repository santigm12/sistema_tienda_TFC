            app:argType="integer" />
        <argument
            android:name="correoUsuarioLogin"
            app:argType="string" />
        <argument android:name="rolUsuarioLogin"
            app:argType="string" />
        <argument android:name="nombreUsuarioLogin"
            app:argType="string" />
        <argument
            android:name="apellidoUsuarioLogin"
